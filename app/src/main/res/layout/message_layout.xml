<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/message_image"
        android:src="@drawable/yash"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="Vikas Kaurav"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:id="@+id/message_name"
        app:layout_constraintTop_toTopOf="@+id/message_image"
        app:layout_constraintStart_toEndOf="@+id/message_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sent TatvIndia Reels... 16h"
        app:layout_constraintTop_toBottomOf="@+id/message_name"
        app:layout_constraintStart_toStartOf="@id/message_name"
        android:layout_marginTop="0dp"
        android:textSize="15dp"/>

   <ImageView
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:id="@+id/camera_icon"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:src="@drawable/camera"

       android:layout_marginEnd="8dp"
       />


</androidx.constraintlayout.widget.ConstraintLayout>