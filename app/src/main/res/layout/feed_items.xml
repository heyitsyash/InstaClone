<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feed_card">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:padding="5dp"
            android:id="@+id/profile_feed_image"
            android:scaleType="centerCrop"
            android:layout_height="50dp"
            android:src="@drawable/family"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/profile_feed_image"
            android:layout_marginStart="55dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="marina"
            android:id="@+id/name_text"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/profile_feed_image"
            tools:layout_editor_absoluteX="58dp" />
        <TextView
            android:layout_width="55dp"
            android:layout_height="12dp"
            app:layout_constraintTop_toBottomOf="@+id/name_text"
            android:text="Planet Earth"
            android:textSize="10sp"
            android:id="@+id/place_text"
            app:layout_constraintStart_toStartOf="@+id/name_text"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="375dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:id="@+id/post_image"
            android:src="@drawable/family"
            app:layout_constraintTop_toBottomOf="@+id/profile_feed_image"
            app:layout_constraintStart_toStartOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
       
        
    </androidx.cardview.widget.CardView>

